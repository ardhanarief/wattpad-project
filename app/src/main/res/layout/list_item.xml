<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:background="#dddddd"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_item_cover"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tv_item_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@id/iv_item_cover"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Judul Wattpad" />

    <TextView
        android:id="@+id/tv_item_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_below="@id/tv_item_judul"
        android:layout_toEndOf="@id/iv_item_cover"
        android:textColor="@color/black"
        tools:text="Genre"/>

    <TextView
        android:id="@+id/tv_item_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_genre"
        android:layout_toEndOf="@id/iv_item_cover"
        android:layout_marginStart="18dp"
        android:textColor="@color/black"
        tools:text="Deskrips"/>

</RelativeLayout>