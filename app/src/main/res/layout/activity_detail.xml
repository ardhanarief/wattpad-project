<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_detail_gambar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/yagami"/>

    <TextView
        android:id="@+id/tv_detail_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        tools:text="Judul Wattpad"/>

    <TextView
        android:id="@+id/tv_detail_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_detail_judul"
        android:textSize="18dp"
        android:textColor="@color/black"
        tools:text="Genre"/>

    <TextView
        android:id="@+id/tv_detail_penulis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_detail_genre"
        android:textSize="18dp"
        android:textColor="@color/black"
        tools:text="Penulis"/>

    <TextView
        android:id="@+id/tv_detail_cerita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_detail_gambar"
        android:textSize="20dp"
        android:textColor="@color/black"
        tools:text="Ceritanya Disini...."/>

</RelativeLayout>